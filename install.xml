		<block name="footer3"
			   title="My account"
			   position="footer3"
			   header="1"
			   collapsible="0"
			   sticky="1"
			   status="active"
			   classname="box-footer box-footer--menu"
			   type="html">
			<![CDATA[
<ul>
	<li>
		<a href="#">Sign In</a>
	</li>
	<li>
