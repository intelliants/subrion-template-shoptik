<?xml version="1.0" encoding="utf-8"?>
<template name="shoptik">
	<title>Shoptik</title>
	<summary>Ecommerce template</summary>
	<author>Gleb Surinov</author>
	<contributor>Intelliants LLC</contributor>
	<version>1.0.0</version>
	<date>2017-01-23</date>
	<compatibility>4.1</compatibility>

	<layout>
		<position menu="1" movable="0">account</position>
		<position menu="1" movable="0">mainmenu</position>

		<position>inventory</position>
		<position>verytop</position>
		<position>top</position>
		<position>landing</position>
		<position>bottom</position>
		<position>verybottom</position>
		<position>prefooter</position>
		<position>copyright</position>

		<section name="content">
			<position fixed="1">left</position>
			<position width="9">center</position>
		</section>
		<section name="footer-blocks">
			<position width="3">footer1</position>
			<position width="3">footer2</position>
			<position width="3">footer3</position>
			<position width="3">footer4</position>
		</section>
	</layout>

	<configgroup name="template_shoptik">Template</configgroup>

	<config group="template_shoptik"
			type="divider"
			order="3000">General</config>
	<config group="template_shoptik"
			name="custom_colors"
			type="radio"
			order="3002"
			values="1,0"
			description="Enable custom colors and backgrounds">0</config>
	<config group="template_shoptik"
			name="custom_color_body_bg"
			type="colorpicker"
			order="3003"
			description="Body background">#fff</config>
	<config group="template_shoptik"
			name="custom_color_text"
			type="colorpicker"
			order="3004"
			description="Text color">#333333</config>
	<config group="template_shoptik"
			name="custom_color_headings"
			type="colorpicker"
			order="3005"
			description="Headings color">#333333</config>
	<config group="template_shoptik"
			name="custom_color_link"
			type="colorpicker"
			order="3006"
			description="Link color">#38b7ea</config>
	<config group="template_shoptik"
			name="custom_color_link_hover"
			type="colorpicker"
			order="3007"
			description="Link hover color">#1490c1</config>

	<config group="template_shoptik" 
			type="divider"
			order="3100">Inventory bar</config>
	<config group="template_shoptik"
			name="custom_color_inventory_bg"
			type="colorpicker"
			order="3102"
			description="Background">#121212</config>
	<config group="template_shoptik"
			name="custom_color_inventory_link"
			type="colorpicker"
			order="3103"
			description="Link color">rgba(255,255,255,0.45)</config>
	<config group="template_shoptik"
			name="custom_color_inventory_link_hover"
			type="colorpicker"
			order="3104"
			description="Link hover color">rgba(255,255,255,0.5)</config>
	<config group="template_shoptik"
			name="custom_color_inventory_link_active"
			type="colorpicker"
			order="3105"
			description="Link active color">rgba(255,255,255,0.7)</config>

	<config group="template_shoptik" 
			type="divider"
			order="3200">Navbar / Mainmenu</config>
	<config group="template_shoptik" 
			name="max_top_menu_items"
			type="text"
			description="Max number of items in Main Menu"
			order="3201">6</config>
	<config group="template_shoptik"
			name="enable_text_logo"
			type="radio"
			order="3202"
			values="1,0"
			description="Enable Logo text">0</config>
	<config group="template_shoptik"
			name="logo_text"
			type="text"
			order="3203"
			show="enable_text_logo|1"
			description="Logo text">shoptik</config>
	<config group="template_shoptik"
			name="navbar_sticky"
			type="radio"
			order="3204"
			values="1,0"
			description="Sticky navbar">1</config>
	<config group="template_shoptik"
			name="search_navbar"
			type="radio"
			order="3205"
			values="1,0"
			description="Show search in navbar">1</config>
	<config group="template_shoptik"
			name="custom_color_navbar_bg"
			type="colorpicker"
			order="3206"
			description="Background">#ffffff</config>
	<config group="template_shoptik"
			name="custom_color_navbar_link"
			type="colorpicker"
			order="3207"
			description="Link color">rgba(50,50,50,0.6)</config>
	<config group="template_shoptik"
			name="custom_color_navbar_link_hover"
			type="colorpicker"
			order="3208"
			description="Link hover color">rgba(50,50,50,0.8)</config>
	<config group="template_shoptik"
			name="custom_color_navbar_link_active"
			type="colorpicker"
			order="3209"
			description="Link active color">#38b7ea</config>

	<config group="template_shoptik" 
			type="divider"
			order="3400">Footer</config>
	<config group="template_shoptik" 
			name="payment_gateways_img"
			type="image"
			description="Payment gateways image"
			order="3400"><![CDATA[]]></config>
	<config group="template_shoptik"
			name="footer_bg"
			type="colorpicker"
			order="3401"
			description="Background">#323232</config>
	<config group="template_shoptik"
			name="footer_blocks_bg"
			type="colorpicker"
			order="3401"
			description="Background of footer blocks">#444444</config>
	<config group="template_shoptik"
			name="footer_link"
			type="colorpicker"
			order="3402"
			description="Link color">rgba(255,255,255,0.45)</config>
	<config group="template_shoptik"
			name="footer_link_hover"
			type="colorpicker"
			order="3403"
			description="Link hover color">rgba(255,255,255,0.5)</config>
	<config group="template_shoptik"
			name="footer_link_active"
			type="colorpicker"
			order="3404"
			description="Link active color">rgba(255,255,255,0.7)</config>

	<config group="template_shoptik" 
			type="divider"
			order="4000">Social links</config>
	<config group="template_shoptik"
			name="website_social"
			type="radio"
			order="4001"
			values="1,0"
			description="Show links">1</config>
	<config group="template_shoptik"
			name="website_social_t"
			type="text"
			order="4002"
			show="website_social|1"
			description="Twitter Link">https://twitter.com/IntelliantsLLC</config>
	<config group="template_shoptik"
			name="website_social_f"
			type="text"
			order="4003"
			show="website_social|1"
			description="Facebook Link">https://www.facebook.com/Intelliants</config>
	<config group="template_shoptik"
			name="website_social_g"
			type="text"
			order="4004"
			show="website_social|1"
			description="Google+ Link">https://plus.google.com/102500660503219569194/posts</config>
	<config group="template_shoptik"
			name="website_social_i"
			type="text"
			order="4005"
			show="website_social|1"
			description="LinkedIn Link">#</config>

	<config group="template_shoptik" 
			name="ckeditor_css"
			type="hidden"
			private="0"
			description="CKEditor CSS"
			order="5000">ckeditor.css</config>

	<changeset>
		<menu position="account" status="active">account</menu>

		<block position="cart">cart</block>
		<block position="left" order="-1" classname="box--categories">categories</block>
		<block position="verybottom">newly_added_products</block>
		<block position="verytop" sticky="0" pages="index">featured_products</block>
		<block position="verytop" sticky="0" pages="index">featured_categories</block>

		<block status="active" classname="section section-portfolio" position="verybottom" order="203">new_portfolio_entries</block>
		<block status="active" classname="section section-testimonials" position="verybottom" order="204">testimonials</block>
		<block status="active" classname="section section-blog" position="verybottom" order="205">blogroll</block>
		<block sticky="0" pages="blog,blog_date,tag">blogs_archive</block>
		<block sticky="0" pages="blog,blog_date,tag">new_blog_posts</block>
		<block status="active" classname="box--border" position="right">common_statistics</block>
		<block status="active" classname="box--border" position="left">filters</block>
	</changeset>

	<blocks>
		<block name="short_info"
			   title="Short information"
			   position="prefooter"
			   order="500"
			   header="0"
			   collapsible="0"
			   sticky="1"
			   status="active"
			   classname="box-short-info"
			   type="html">
			<![CDATA[
<div class="container">
	<div class="b-short-info">
		<div class="b-short-info__item">
			<i class="fa fa-truck"></i>
			<span>free delivery</span>
			<p>From 275 USD</p>
		</div>
		<div class="b-short-info__item">
			<i class="fa fa-money"></i>
			<span>cash on delivery</span>
			<p>From 275 USD</p>
		</div>
		<div class="b-short-info__item">
			<i class="fa fa-gift"></i>
			<span>free gift box</span>
			<p>&amp; gift note</p>
		</div>
		<div class="b-short-info__item">
			<i class="fa fa-phone-square"></i>
			<span>contact us</span>
			<p>123 456 789</p>
		</div>
	</div>
</div>
			]]>
		</block>
		<block name="footer1"
			   title="Information"
			   position="footer1"
			   header="1"
			   collapsible="0"
			   sticky="1"
			   status="active"
			   classname="box-footer box-footer--menu"
